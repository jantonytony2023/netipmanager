// Este é o schema inicial do Prisma para SQLite
// Você pode adicionar mais modelos conforme necessário

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
}

model Rede {
  id         Int     @id @default(autoincrement())
  rede       String
  descricao  String
  tipo       String
  ativos     Ativo[]
}

model Ativo {
  id         Int     @id @default(autoincrement())
  ip         String
  mac        String
  descricao  String
  redeId     Int
  rede       Rede    @relation(fields: [redeId], references: [id])
}
